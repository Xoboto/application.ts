{
  "name": "application.ts",
  "version": "1.0.1",
  "description": "Simplified Web SPA app framework with vanilla JavaScript and CSS",
  "type": "module",
  "main": "src/index.ts",
  "files": [
    "src/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc",
    "preview": "vite preview",
    "example": "npm run build && vite examples --open",
    "example:build": "npm run build && vite build --config vite.config.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "test:coverage": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "spa",
    "framework",
    "typescript",
    "vanilla",
    "lightweight",
    "template",
    "routing",
    "stackview"
  ],
  "author": "Xoboto Contributors",
  "license": "MIT",
  "dependencies": {
    "stackview.ts": "^1.0.1",
    "template.ts": "^2.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "eslint": "^8.57.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-function-return-type": "warn",
      "prefer-spread": "off"
    }
  }
}
